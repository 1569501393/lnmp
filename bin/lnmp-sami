#!/usr/bin/env bash

#
# https://github.com/FriendsOfPHP/Sami
#

set -ex

DIR="$( cd "$( dirname "$0"  )" && pwd  )"

source $DIR/.arch

docker run -it --rm \
  --mount type=bind,src=$PWD,target=/app,consistency=cached \
  --mount src=lnmp_composer_cache-data,target=/tmp/cache \
  --entrypoint sami \
  -e TZ=${TZ} \
  ${DOCKER_IMAGE}:${TAG} \
  "$@"
